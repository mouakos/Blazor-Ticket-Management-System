@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="m_MyCustomTheme" />
@* <MudThemeProvider/> *@
@* <MudPopoverProvider /> *@

@* Needed for dialogs *@
@* <MudDialogProvider /> *@

@* Needed for snackbars *@
@* <MudSnackbarProvider /> *@

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row d-flex justify-content-between" style="padding: 35px">
            <div style="font-size: 25px">
                <SectionOutlet SectionName="page-title"></SectionOutlet>
            </div>
            <AuthorizeView>
                <a href="/logout">Logout</a>
            </AuthorizeView>

        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    readonly MudTheme m_MyCustomTheme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#007D88",
            Info = "#64748b",
            Error = "#dc3545"
        }
    };
}