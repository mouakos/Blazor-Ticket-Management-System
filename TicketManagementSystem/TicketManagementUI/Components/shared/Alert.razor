@if (m_ShowLeaveAlert)
{
    <MudAlert Severity="Severity"
              Variant="Variant.Filled"
              ShowCloseIcon="true"
              CloseIconClicked="() => CloseMe()">
        @Message
    </MudAlert>
}

@code {
    [Parameter] public string Message { get; set; }

    private bool m_ShowLeaveAlert = false;
    private Severity Severity { get; set; }

    private void CloseMe()
    {
        m_ShowLeaveAlert = false;
    }

    public void ShowSuccess(string message)
    {
        Message = message;
        Severity = Severity.Success;
        m_ShowLeaveAlert = true;
        StateHasChanged(); // Todo: Alert state change
    }


    public void ShowFailed(string message)
    {
        Message = message;
        Severity = Severity.Error;
        m_ShowLeaveAlert = true;
        StateHasChanged();
    }

}